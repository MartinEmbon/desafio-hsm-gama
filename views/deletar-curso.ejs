<%- include('./partials/__header'); %>

    <main>         
      
      <div class="cadastro" id="desafio">
        <h2 class="heading_cadastro">Deletar de cursos</h2>        
        <p class="cadastro_curso">Por favor, complete formulario de cadastro.</p>
      </div>      
      
      <section class="form-container">

        <form class="form-cadastro-curso" action="/excluir/<%= curso.id %>?_method=DELETE" method="POST" enctype="multipart/form-data">
  
          <label for="nome">Título</label>
            <input type="text" name="nome" id="nome" value="<%= curso.nome %>">            

            <label for="professor">Professor</label>
            <input type="text" name="professor" id="professor" value="<%= curso.professor %>">
            
            <label for="aulas">Lista de aulas</label>
            <input type="text" name="aulas" id="aulas" value="<%= curso.aulas %>">

            <label for="descricao">Descrição</label>
            <textarea name="descricao" id="descricao" value="<%= curso.descricao %>"></textarea>

            <label for="ilustracao">Imagem</label>
            <input type="file" name="ilustracao" id="ilustracao">

            <button type="submit">Deletar</button>
        
          </form>
      </section>
    </main>
    
    <%- include('./partials/__footer'); %>
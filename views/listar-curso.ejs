<%- include('./partials/__header'); %>

    <main>         
      
      <div class="cadastro" id="desafio">
        <h2 class="heading_cadastro">Lista de cursos cadastrados</h2>        
      </div>      
            
        <% if(cursos.length<1) { %> 
          <p class="text_cadastro otros">Ainda n√£o tem cursos cadastrados ... <a href="/admin">Click aqui para registrar</a></p>
          <%}%> 
            
        <section class="cursos">                        
          <% for (let curso of cursos) { %> 
              <div class="curso">
                <div class="curso-imagen">
                  <img src="/uploads/<%=curso.ilustracao%>" alt="">
                </div> <!--curso-imagen-->
                
                                
                <div class="nome-curso">
                  <h3>Detalhes do curso</h3>                                      
                    <p>Curso: <%= curso.nome %> </p>
                    <p>Professor <%= curso.professor %></p>
                    <p>Aulas <%= curso.aulas %></p>
                    <p>Descricao <%= curso.descricao %></p>                    
                </div> <!--nome-curso-->
            </div>  <!--curso-->                                      
            <% } %>        
          </section>
        
        
    </main>
    
    <%- include('./partials/__footer'); %>
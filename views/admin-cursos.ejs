<%- include('./partials/__header'); %>

    <main>         
      
      <div class="cadastro" id="desafio">
        <h2 class="heading_cadastro">Painel de administação </h2>        
      </div>      
            

      <section class="painel-adm">        
        <a href="/cadastro" class="novo-curso">Adicionar novo curso</a>                  
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Curso</th>
                    <th>Professor</th>
                    <th>Aulas</th>
                    <th>Descrição</th>
                    <th>Imagem</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>                
                <% for (let curso of cursos) { %>
                    <tr>
                        <td>1</td>
                        <td><%= curso.nome %></td>
                        <td><%= curso.professor %></td>
                        <td><%= curso.aulas %></td>
                        <td><%= curso.descricao %></td>                    
                        <td><%= curso.ilustracao %></td>                                            
                        <td class="acoes">
                            <a href="/editar/<%= curso.id %>" class="btn"><i class="fas fa-edit"></i></a>                            
                            <a href="/excluir/<%= curso.id %>" class="btn"><i class="fas fa-trash-alt"></i></a>                            
                        </td>
                    </tr>                

                <% } %>                
            </tbody>
        </table>        
    </section>

      
    </main>
    
    <%- include('./partials/__footer'); %>
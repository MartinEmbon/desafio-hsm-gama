<%- include('./partials/__header'); %>

    <main>         
      
      <div class="cadastro" id="desafio">
        <h2 class="heading_cadastro">Cadastro de cursos</h2>        
        <p class="cadastro_curso">Por favor, complete o formulario de cadastro.</p>
      </div>      
      
      <section class="form-container">
      
        <form class="form-cadastro-curso" action="/cadastro" method="POST" enctype="multipart/form-data">                
            <label for="nome">Título</label>
            <input type="text" name="nome" id="nome">            

            <label for="professor">Professor</label>
            <input type="text" name="professor" id="professor">
            
            <label for="aulas">Lista de aulas</label>
            <input type="text" name="aulas" id="aulas">

            <label for="descricao">Descrição</label>
            <textarea name="descricao" id="descricao"></textarea>

            <label for="ilustracao">Imagem</label>
            <input type="file" name="ilustracao" id="ilustracao">

            <button type="submit">Cadastrar</button>
        
          </form>
      </section>
    </main>
    
    <%- include('./partials/__footer'); %>